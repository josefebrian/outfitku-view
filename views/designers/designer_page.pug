html(lang="en")
head
  include ../includes/head.pug
  include ../includes/loginmodal.pug
  include ../includes/script.pug
  title #{siteName} - #{designer.businessName}
body
  include ../includes/header.pug
  main
    #index-banner.parallax-container
      .section.no-pad-bot
        .container
          br
          br
          h1.header.center.white-text.text-lighten-2
            p
              //- i.medium.material-icons(style="text-shadow: 0px 6px 10px #0000002e;")=judul
              //- //- span(style="text-shadow: 0px 6px 10px #0000002e;")=judul
          .row.center
            h1.white-text.text-lighten-2(style="text-shadow: 0px 3px 1px #0000002e;") #{designer.businessName.toUpperCase()}
            h5.header.col.s12.light.white-text.text-lighten-2(style="text-shadow: 0px 3px 1px #0000002e;") #{designer.businessAddress.toUpperCase()}
          .row.center
            a#download-button.btn-large.waves-effect.waves-light.lighten-1(href=link.designer class= `${colorTheme}`) Mulai Desain
        .parallax
          img.responsive-img(src=link.imgCDN+designer.picture alt='Background Image' onerror="this.onerror=null;this.src='/public/img/site/default-pic-designer.jpg';")
    .container.center
      .section
        .row
            .col.s12
              h4='Tentang '+ designer.businessName
              p alamat: #{designer.businessAddress}
              p email: #{designer.businessEmail}
              p keahlian: 
                each skill in designer.expertise
                  span #{skill.name} 
              p #{designer.xxxxx}
      .section
        .row
            .col.s12
              h4='Portfolio dari '+ designer.businessName


    include ../includes/footer.pug