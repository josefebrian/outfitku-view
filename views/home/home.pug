                        img#gambar.activator.responsive-img(src=link.imgCDN+'site/thumbs/designer-3.jpg', alt='nopic', onerror="this.onerror=null;this.src='/public/img/site/noshippic.png';", style='width:100%;height:14.8em;object-fit: cover;')
